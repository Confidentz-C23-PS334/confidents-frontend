<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="loginVM" type="com.confidents.app.modules.login.data.viewmodel.LoginVM"/>
    </data>
    <LinearLayout android:gravity="center_horizontal"
        android:id="@+id/linearColumnlanguage"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_163pxv"
        android:layout_marginEnd="@dimen/_16pxh"
        android:layout_marginStart="@dimen/_16pxh"
        android:layout_marginTop="@dimen/_69pxv"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylelight_blue_100">
        <ScrollView android:clipToPadding="false"
            android:fillViewport="true" android:gravity="start"
            android:id="@+id/scrollViewScrollview"
            android:layout_height="0dp" android:layout_weight="1" android:layout_width="match_parent">
            <LinearLayout android:gravity="start"
                android:id="@+id/linearLogin"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="vertical">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtLanguage"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_75pxh"
                    android:layout_marginStart="@dimen/_75pxh"
                    android:layout_width="wrap_content"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="@dimen/_8pxh"
                    android:singleLine="true"
                    android:text="@{loginVM.loginModel.txtLanguage}"
                    style="@style/txtPoppinsbold16" tools:text="@string/lbl_welcome_to"/>
                <ImageView android:id="@+id/imageL1"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="@dimen/_27pxh"
                    android:layout_marginEnd="@dimen/_75pxh"
                    android:layout_marginStart="@dimen/_75pxh"
                    android:layout_marginTop="@dimen/_7pxv"
                    android:layout_width="@dimen/_155pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_l1"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_l1"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtInputLabelM"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:layout_marginTop="@dimen/_33pxv"
                    android:layout_width="wrap_content"
                    android:lineSpacingExtra="@dimen/_4pxh"
                    android:singleLine="true"
                    android:text="@{loginVM.loginModel.txtInputLabelM}"
                    style="@style/txtInterregular16" tools:text="@string/lbl_email"/>
                <EditText
                    android:background="@drawable/rectangle_bg_white_a700_border_bluegray_100_radius_6"
                    android:ellipsize="end"
                    android:hint="@string/msg_enter_your_emai"
                    android:id="@+id/etInputField"
                    android:inputType="textEmailAddress"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5pxv"
                    android:layout_width="match_parent"
                    android:lineSpacingExtra="@dimen/_4pxh"
                    android:paddingBottom="@dimen/_11pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingStart="@dimen/_12pxh"
                    android:paddingTop="@dimen/_12pxv"
                    android:singleLine="true"
                    android:text="@={loginVM.loginModel.etInputFieldValue}"
                    android:textColorHint="@color/bluegray_200"
                    style="@style/etSolidRoundedOutline_1" tools:ignore="Autofill"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtInputLabelMOne"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:layout_marginTop="@dimen/_19pxv"
                    android:layout_width="wrap_content"
                    android:lineSpacingExtra="@dimen/_4pxh"
                    android:singleLine="true"
                    android:text="@{loginVM.loginModel.txtInputLabelMOne}"
                    style="@style/txtInterregular16" tools:text="@string/lbl_password"/>
                <EditText
                    android:background="@drawable/rectangle_bg_white_a700_border_bluegray_100_radius_6"
                    android:drawableEnd="@drawable/img_eye"
                    android:drawablePadding="@dimen/_30pxh"
                    android:ellipsize="end"
                    android:hint="@string/lbl_enter_password"
                    android:id="@+id/etInputFieldOne"
                    android:inputType="textPassword"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5pxv"
                    android:layout_width="match_parent"
                    android:lineSpacingExtra="@dimen/_4pxh"
                    android:paddingBottom="@dimen/_11pxv"
                    android:paddingEnd="@dimen/_13pxh"
                    android:paddingStart="@dimen/_12pxh"
                    android:paddingTop="@dimen/_12pxv"
                    android:singleLine="true"
                    android:text="@={loginVM.loginModel.etInputFieldOneValue}"
                    android:textColorHint="@color/bluegray_200"
                    style="@style/etSolidRoundedOutline_1" tools:ignore="Autofill"/>
                <LinearLayout android:id="@+id/linearRowinputlabels"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16pxv"
                    android:layout_width="match_parent" android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:buttonTint="@color/bluegray_100"
                        android:ellipsize="end"
                        android:fontFamily="@font/inter"
                        android:id="@+id/checkBoxInputLabelS"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_1pxv"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:layout_weight="0.51"
                        android:layout_width="0dp"
                        android:lineSpacingExtra="@dimen/_3pxh"
                        android:paddingBottom="@dimen/_1pxv"
                        android:paddingStart="@dimen/_8pxh"
                        android:paddingTop="@dimen/_1pxv"
                        android:singleLine="true"
                        android:text="@string/lbl_remember_me"
                        android:textColor="@color/bluegray_200"
                        android:textFontWeight="400"
                        android:textSize="@dimen/_14pxh"
                        android:textStyle="normal" tools:text="@string/lbl_remember_me"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtInputLabelSOne"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_1pxv"
                        android:layout_marginStart="@dimen/_153pxh"
                        android:layout_marginTop="@dimen/_3pxv"
                        android:layout_weight="0.49"
                        android:layout_width="0dp"
                        android:lineSpacingExtra="@dimen/_3pxh"
                        android:singleLine="true"
                        android:text="@{loginVM.loginModel.txtInputLabelSOne}"
                        style="@style/txtInterregular14_1" tools:text="@string/msg_forgot_password"/>
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:ellipsize="end" android:gravity="center"
                    android:id="@+id/btnLogIn"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_24pxv"
                    android:layout_width="match_parent"
                    android:lineSpacingExtra="@dimen/_4pxh"
                    android:paddingBottom="@dimen/_15pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingStart="@dimen/_30pxh"
                    android:paddingTop="@dimen/_15pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_log_in"
                    android:textAllCaps="false"
                    style="@style/btnSolidRounded_3" tools:text="@string/lbl_log_in"/>
                <LinearLayout android:id="@+id/linearOrcontinuewit"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_27pxv"
                    android:layout_width="match_parent" android:orientation="horizontal">
                    <View android:background="@color/black_900"
                        android:id="@+id/lineLineTwo"
                        android:layout_height="@dimen/_1pxv"
                        android:layout_marginBottom="@dimen/_9pxv"
                        android:layout_marginTop="@dimen/_9pxv"
                        android:layout_weight="0.34" android:layout_width="0dp"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtOrcontinuewit"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8pxh"
                        android:layout_weight="0.33"
                        android:layout_width="0dp"
                        android:lineSpacingExtra="@dimen/_4pxh"
                        android:singleLine="true"
                        android:text="@{loginVM.loginModel.txtOrcontinuewit}"
                        style="@style/txtInterregular16_2" tools:text="@string/msg_or_continue_wit"/>
                    <View android:background="@color/black_900"
                        android:id="@+id/lineLineOne"
                        android:layout_height="@dimen/_1pxv"
                        android:layout_marginBottom="@dimen/_9pxv"
                        android:layout_marginStart="@dimen/_4pxh"
                        android:layout_marginTop="@dimen/_9pxv"
                        android:layout_weight="0.34" android:layout_width="0dp"/>
                </LinearLayout>
                <LinearLayout android:gravity="center_vertical"
                    android:id="@+id/linearButton"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_26pxv"
                    android:layout_width="match_parent"
                    android:orientation="horizontal" style="@style/groupStylecornerRadius_2">
                    <ImageView android:id="@+id/imageGoogleOne"
                        android:layout_height="@dimen/_23pxh"
                        android:layout_marginBottom="@dimen/_13pxv"
                        android:layout_marginStart="@dimen/_110pxh"
                        android:layout_marginTop="@dimen/_13pxv"
                        android:layout_width="@dimen/_23pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_google1"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_google1"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtSigninwithGo"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_13pxv"
                        android:layout_marginEnd="@dimen/_108pxh"
                        android:layout_marginStart="@dimen/_8pxh"
                        android:layout_marginTop="@dimen/_16pxv"
                        android:layout_weight="0.86"
                        android:layout_width="0dp"
                        android:lineSpacingExtra="@dimen/_4pxh"
                        android:singleLine="true"
                        android:text="@{loginVM.loginModel.txtSigninwithGo}"
                        style="@style/txtInterregular16_3" tools:text="@string/msg_sign_in_with_go"/>
                </LinearLayout>
                <TextView android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:id="@+id/txtConfirmation"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_74pxh"
                    android:layout_marginStart="@dimen/_75pxh"
                    android:layout_marginTop="@dimen/_28pxv"
                    android:layout_width="match_parent"
                    android:lineSpacingExtra="@dimen/_4pxh"
                    android:singleLine="true"
                    android:text="@{loginVM.loginModel.txtConfirmation}"
                    style="@style/txtInterregular16_4" tools:text="@string/msg_don_t_have_an_a"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
